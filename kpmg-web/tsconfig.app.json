{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "@angular/localize"
    ],
    "paths": {
      "@docs-components/*": [
        "./src/components/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@resources": [
        "./src/app/shared/constants/text-resources.ts"
      ]
    }
  },
  "enableIvy": true,
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
